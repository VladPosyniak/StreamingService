<script>
    var isUserLogged = {{ app.user != null }}
    $('.single-item__add').click(function (){
        if (isUserLogged === false) {
            alert('Please login to like track')
            return false
        }
        var a = this
        $.ajax({
            url: $(a).attr('href'),
            xhrFields: {
                withCredentials: true
            },
            method: 'POST'
        }).done(function (data) {
            if (data.status) {
                if (data.isLiked) {
                    $(a).css('background-color', 'rgba(37,165,106,0.3)')
                } else {
                    $(a).css('background-color', 'rgba(37,165,106,0.15)')
                }
            } else {
                if (data.message) {
                    alert(data.message)
                }
            }
        })

        return false
    }, )
