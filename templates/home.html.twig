                                            </svg>
                                        </a>
                                        <div class="single-item__title">
                                            <h4><a href="{{ path('page-album', {id: newRelease.album.id}) }}">{{ newRelease.name }}</a></h4>
                                            <span><a href="{{ path('page-artist', {'id': newRelease.album.artist.id}) }}">{{ newRelease.album.artist.name }}</a></span>
                                        </div>
                                        <span class="single-item__time">{{ random(1, 5) }}:{{ random(10, 60) }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
                {%  if app.user %}
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="row row--grid">
                        <!-- title -->
                        <div class="col-12">
                            <div class="main__title">
                                <h2>
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
