                                    <a href="#">Recommendations</a></h2>
                            </div>
                        </div>
                        <!-- end title -->


                        <div class="col-12">
                            <ul class="main__list">
                                {% for recommendation in recommendations %}
                                    <li class="single-item">
                                        <a data-link data-title="{{ recommendation.name }}" data-artist="{{ recommendation.album.artist.name }}"
